{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@images/*": ["images/*"],
      "@pages/*": ["pages/*"],
      "@blog/*": ["pages/blog/*"],
      "@resume/*": ["pages/resume/*"],
      "@projects/*": ["pages/projects/*"],
      "@about/*": ["pages/about/*"]
    }
  },
  "include": ["./src/**/*", "./api/**/*"]
}
